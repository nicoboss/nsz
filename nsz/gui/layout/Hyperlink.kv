<HyperlinkTooltip>:
<Tooltip>:
	size_hint: None, None
	size: self.texture_size[0]+5, self.texture_size[1]+5
	canvas.before:
		Color:
			rgba: 0.2, 0.2, 0.2, 0.8
		Rectangle:
			size: self.size
			pos: self.pos

<HyperlinkLabel>:
	size: self.texture_size
	font_size: 14
	size_hint: None, None
	markup: True
	orientation: 'horizontal'

